{
  "source": {
    "include": [
      "src",
      "src/core",
      "docs/apidocs.md"
    ],
    "includePattern": ".+\\.js$"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "sourceType": "module",
  "opts": {
    "template": "node_modules/docolatte",
    "destination": "./apidocs",
    "theme_opts": {
      "default_theme": "dark"
    }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  },
  "templates": {
    "docolatte": {
      "branding": {
        "title": "Points",
        "link": "https://github.com/Absulit/points",
        "icon": "home",
        "font": {
          "size": "1.5em",
          "family": "Helvetica, sans-serif"
        }
      },
      "code": {
        "theme": "nord"
      },
      "meta": {
        "title": "Points",
        "description": "A Generative Art library made in WebGPU",
        "keywords": "javascript, webgl, crative-coding, shaders, generative-art, webgpu, genart, wgsl"
      },
      "footer": {
        "copyright": "&copy; Sebasti√°n Sanabria",
        "license": "MIT"
      }
    }
  }
}